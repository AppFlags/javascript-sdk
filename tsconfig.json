{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es5",
        "lib": [ "es2015", "dom" ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "compileOnSave": true,
    "include": [
        "src"
    ],
    "exclude": [
        "src/**/*.test.ts"
    ]
}